{
  "compilerOptions": {
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "paths": {
      "@models": [
        "./generated/models"
      ],
      "@types": [
        "./generated/types"
      ],
      "*": [
        "node_modules/*",
        "./*"
      ]
    }
  },
  "include": [
    "./**/*",
    ".prettierrc"
  ],
  "exclude": [
    "node_modules",
    "migrations/*",
    "src/generated",
    "src/modules/**/types.ts",
    ".vscode"
  ]
}